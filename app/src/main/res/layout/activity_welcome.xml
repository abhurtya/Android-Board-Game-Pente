<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/mainmenu_background"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="-16dp" />

    <TextView
        android:id="@+id/textView_prompt"
        android:layout_width="181dp"
        android:layout_height="61dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/paprika"
        android:text="  \t    to the \n Game of Pente"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_start_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_prompt"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/textView_prompt"
        app:layout_constraintTop_toBottomOf="@+id/textView_prompt"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/button_load_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Load Game"
        app:layout_constraintEnd_toEndOf="@+id/button_start_new_game"
        app:layout_constraintStart_toStartOf="@+id/button_start_new_game"
        app:layout_constraintTop_toBottomOf="@+id/button_start_new_game" />

    <TextView
        android:layout_width="301dp"
        android:layout_height="123dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/akronim"
        android:text="Welcome"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_image" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="cursive"
        android:text="Anish Bhurtyal"
        android:textColor="#F2F1F4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="288dp"
        android:layout_height="61dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/paprika"
        android:text="Let the fun begin!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_load_game" />


</androidx.constraintlayout.widget.ConstraintLayout>
